{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug app",
      "type": "firefox",
      "request": "attach"
    },
    {
      "name": "Launch localhost",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:3000/index.html",
      // "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch index.html",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "file": "${workspaceFolder}/index.html"
    }
  ]
}